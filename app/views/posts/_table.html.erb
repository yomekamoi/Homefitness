<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>name</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.name %></td>
        <td class="text-right">
          <%= link_to 'Review', new_post_review_path(post), :class => 'btn btn-link btn-xs' %>
          <%= link_to 'Edit', edit_post_path(post), :class => 'btn btn-link btn-xs' %>
          <%= link_to 'Delete', post_path(post), :class => 'btn btn-xs btn-danger',
                      :method => :delete, :data => { :confirm => 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>