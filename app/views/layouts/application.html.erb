<!DOCTYPE html>
	<html>
 		<head>
 			<title>Home_fitness</title>
 			<%= csrf_meta_tags %>
 			<%= csp_meta_tag %>

 			<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
 			<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
 		</head>
 		<% if flash[:notice]%>
      		<div class="flash">
        	<%=flash[:notice] %>
      		</div>
    	<% end %>

 		<body>
 			<nav class="navbar navbar-inverse navbar-static-top">
 			<div class="container-fluid">
 				<div class="navbar-header">
 					<% if user_signed_in? %>
 					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
 					<span class="icon-bar"></span>
 					<span class="icon-bar"></span>
 					<span class="icon-bar"></span>
 					</button>
 					<% end %>
 					<a class="navbar-brand" href="/">Home_fitness</a>
 				</div>
 				<% if user_signed_in? %>
 				　　<div class="collapse navbar-collapse" id="navbar-collapse">
 					<ul class="nav navbar-nav">
 						<li><%= link_to("投稿一覧", "/trainings/index")%></a></li>
 						<li><%= link_to("新規投稿", "/trainings/new")%></a></li>
 						<li><%= link_to 'ユーザー一覧', '/users' %></li>
 					</ul>
 					<ul class="nav navbar-nav navbar-right">
 						<li class="dropdown">
 						<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button">アカウント <span class="caret"></span></a>
 						<ul class="dropdown-menu">
 						<li><%= link_to '設定', edit_user_registration_path %></li>
 						<li><%= link_to 'お問い合わせ', contacts_new_path %></li>
 						<li role="separator" class="divider"></li>
 						<li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
 						</ul>
 						</li>
 					</ul>
 				　　</div>
 				<% else %>
 					<div class="collapse navbar-collapse" id="navbar-collapse">
 					<ul class="nav navbar-nav">
 						<li class="nav-item"><%= link_to 'About', homes_about_path, class: 'fas fa-question-circle' %></li>
          				<li class="nav-item"><%= link_to '新規登録', new_user_registration_path, class: 'fas fa-edit' %></li>
          				<li class="nav-item"><%= link_to 'ログイン', new_user_session_path, class: 'fas fa-sign-in-alt' %></li>
 					</ul>
 				　　</div>
 				<% end %>
 			</div>
 			</nav>
 			<div class="container">
 				<% if notice.present? %>
 				<div class="alert alert-dismissable alert-success">
 					<button type="button" class="close" data-dismiss="alert">&times;</button>
 					<p><%= notice %></p>
 				</div>
 				<% end %>
 				<% if alert.present? %>
 					<div class="alert alert-dismissable alert-danger">
 					<button type="button" class="close" data-dismiss="alert">&times;</button>
 					<p><%= alert %></p>
 					</div>
 				<% end %>
 				<%= yield %>
 			</div>
 		</body>
	</html>